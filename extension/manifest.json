{
  "manifest_version": 3,
  "name": "Weather Dashboard",
  "version": "1.0.0",
  "description": "Real-time weather with dynamic icon showing temperature and conditions",
  "permissions": [
    "storage",
    "alarms",
    "offscreen",
    "geolocation"
  ],
  "host_permissions": [
    "http://api.weatherapi.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/default-16.png",
      "32": "icons/default-32.png",
      "48": "icons/default-48.png",
      "128": "icons/default-128.png"
    },
    "default_title": "Weather Dashboard"
  },
  "icons": {
    "16": "icons/default-16.png",
    "32": "icons/default-32.png",
    "48": "icons/default-48.png",
    "128": "icons/default-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
